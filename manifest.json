{
  "manifest_version": 2,

  "name": "ProofMe-Canva",
  "description": "A quick way to import your canva project into a proof.",
  "version": "0.1",

  "icons": {
      "16": "images/proofme-button-icon.png",
      "48": "images/proofme-button-icon.png",
      "128": "images/proofme-button-icon.png"
  },

  "content_scripts": [
      {
          "matches": ["https://www.canva.com/*"],
          "js": ["jquery-3.0.0.min.js", "send-to-proofme.js"],
          "css": ["index.css"]
      }

  ],

  "browser_action": {
    "default_icon": "images/proofme-button-icon.png",
    "default_popup": "popup.html",
    "default_title": "ProofMe-Canva Beta"
  },

  "permissions": [
    "https://www.canva.com/*"
  ]
}
