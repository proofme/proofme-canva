{
  "manifest_version": 2,

  "name": "ProofMe-Canva",
  "description": "A quick way to export your canva design into a proof.",
  "version": "0.0.1",

  "update_url": "https://raw.githubusercontent.com/proofme/proofme-canva/master/updates.xml",

  "icons": {
      "16": "images/proofme-button-icon.png",
      "48": "images/proofme-button-icon.png",
      "128": "images/proofme-button-icon.png"
  },

  "content_scripts": [
      {
          "matches": ["https://www.canva.com/*"],
          "js": ["js/send-to-proofme.js"],
          "css": ["css/index.css"]
      }

  ],

  "browser_action": {
    "default_icon": "images/proofme-button-icon.png",
    "default_title": "ProofMe-Canva Beta"
  },

  "permissions": [
    "https://www.canva.com/*"
  ]
}
